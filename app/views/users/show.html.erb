<h1>Welcome to <%= @user.username %>'s page</h1>
<% if @created_events.any? %>
		<h3><%= @user.username.capitalize %> created (<%= @created_events.count %>) events</h3>
		
		<ul>
			<% @created_events.each do |event| %>
				<li>
				<%= link_to event.title, event %>
				</li>
			<% end %>
		</ul>

	<% else %>
		<h3>No Events Found</h3>
	<% end %>

<% if @upcoming_events.any? %>
	<h3>Upcoming Events have to attend</h3> 
	<ul>
		<% @upcoming_events.each do |event| %>
			<li>
			<%= link_to event.title, event %> <small>Time: </small>
			<%= event.date%>
			</li>
		<% end %>
	</ul>
<% else %>
	<h3>No Upcoming Events have to attend</h3>
<% end %>

<% if @prev_events.any? %>
	<h3>Previous events attended</h3> 
	<ul>
		<% @prev_events.each do |event| %>
			<li>
			<%= link_to event.title, event %> <small>Time: </small>
			<%= event.date%>
			</li>
		<% end %>
	</ul>
<% else %>
	<h3>No previous event attended</h3>
<% end %>
